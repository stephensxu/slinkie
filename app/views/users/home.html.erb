<h1><%= render partial: "shared/header" %></h1>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Added</th>
      <th>Short URL</th>
      <th>URL</th>
      <th>Creator</th>
      <th>Clicks</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= time_ago_in_words(link.created_at) %> ago</td>
        <td><%= link_url(link) %></td>
        <td><%= link.url %></td>
        <!-- <td><%= link.user.nil? ? "Guest" : link.user.email %></td> -->
        <td><%= user_display_name(link.user) %></td>
        <td><%= link.clicks_count %></td>
        <td><%= link_to 'Visit link', link %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>