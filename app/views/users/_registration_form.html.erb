<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>. Oops, please check your input and try again! </h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field(:email, :placeholder => "Email")%>
  </div>

  <div class="field">
    <%= f.label :password  %><br>
    <%= f.password_field :password, :placeholder => "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, :placeholder => "password" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
